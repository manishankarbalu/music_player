<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.commonman.manishankar.musicplayer.Player"
    android:weightSum="1">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginTop="118dp"
        style="@style/h"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="|&lt;"
        android:id="@+id/btnpre"
        android:width="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"
        android:id="@+id/btnfb"
        android:width="10dp"
        android:layout_alignTop="@+id/btnpre"
        android:layout_toRightOf="@+id/btnpre"
        android:layout_toEndOf="@+id/btnpre" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="||"
        android:id="@+id/btnpause"
        android:width="10dp"
        android:layout_alignTop="@+id/btnfb"
        android:layout_toRightOf="@+id/btnfb"
        android:layout_toEndOf="@+id/btnfb" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text=">>"
        android:id="@+id/btnff"
        android:width="10dp"
        android:layout_alignBottom="@+id/btnpause"
        android:layout_toRightOf="@+id/btnpause"
        android:layout_toEndOf="@+id/btnpause" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text=">|"
        android:id="@+id/btnnxt"
        android:layout_alignBottom="@+id/btnff"
        android:layout_toRightOf="@+id/btnff"
        android:layout_toEndOf="@+id/btnff" />

</RelativeLayout>
